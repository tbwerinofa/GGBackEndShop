@model IEnumerable<ProductModel>
@{
    var productId = Model.FirstOrDefault().Id;
    ViewData["Title"] = "Product List";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Code</td>
                            <td>@product.Price</td>
                            <td>
                                <a class="btn btn-sm btn-outline-secondary" asp-route-id="@product.Id" asp-controller="Product" asp-action="Edit">Product</a>
                                <a class="btn btn-sm btn-outline-secondary" asp-route-id="@product.Id" asp-controller="Product" asp-action="Delete">Delete</a>
                                <a class="btn btn-sm btn-outline-secondary" asp-route-productId="@product.Id" asp-controller="ProductImage" asp-action="Index">Product Uploads</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a class="btn btn-md btn-primary" asp-route-productId="@productId" asp-controller="ProductImage" asp-action="Create">Create</a>
    </div>
</div>
